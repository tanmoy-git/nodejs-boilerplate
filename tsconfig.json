{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "declaration": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": true,
    "noErrorTruncation": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noLib": false,
    "allowJs": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",
    "skipLibCheck": true,
    "lib": ["es2017"],
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@app/*": ["*"],
      "@entities/*": ["./entities/*"],
      "@modules/*": ["./modules/*"],
      "@utils/*": ["./utils/*"],
      "@logger/*": ["./modules/logger/*"],
      "*": ["./@types/*"]
    }
  },
  "exclude": [
      "./dist/*",
      "./src/@types",
      "./src/lib",
      "./src/test/unit/guards/jwt.guard.test.ts",
      "./src/test/unit/modules/etl"
  ]
}
